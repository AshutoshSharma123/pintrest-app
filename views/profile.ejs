<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-gray-600 text-white pt-2">
  <form
    id="uploadform"
    action="/fileupload"
    method="post"
    hidden
    enctype="multipart/form-data"
  >
    <input type="file" name="image" />
  </form>
  <div class="profdets flex flex-col items-center">
    <div class="relative">
      <span
        id="uploadicon"
        class="w-10 h-10 bg-gray-800 absolute bottom-0 right-0 rounded-full flex items-center justify-center"
        ><i class="ri-pencil-line"></i
      ></span>
      <div class="w-40 h-40 bg-white rounded-full overflow-hidden">
        <img
          class="w-full h-full object-center object-contain"
          src="/images/uploads/<%= user.profileImage %>"
          alt="Profile Image"
        />
      </div>
    </div>

    <h1 class="text-3xl font-semibold text-white">@<%= user.username %></h1>
    <h3 class="text-md">Welcome <%= user.name %> </h3>
    <a
      href="/edit"
      class="px-7 py-2 mt-1 bg-gray-400 text-md font-semibold rounded-full"
      >Edit</a
    >
    <a href="/add" class="px-7 py-2 rounded-lg bg-red-700 text-s font-semibold mt-3">
      Add new posts
    </a>
  </div>
  <div class="cards flex flex-wrap gap-10 mt-10 px-10">
    <div class="card">
      <div class="w-52 h-40 rounded-md bg-white overflow-hidden">
        <img
          class="w-full h-full object-contain object-center"
          src="/images/uploads/<%= user?.posts[0]?.image %>"
          alt=""
        />
      </div>
      <a href="/show/posts" class="text-xl font-semibold mt-2">your pins</a>
      <h5 class="text-xs opacity-80"><%= user.posts.length %> pins</h5>
    </div>
  </div>
</div>

<script>
  document.querySelector("#uploadicon").addEventListener("click", function () {
    document.querySelector("#uploadform input").click();
  });
  document
    .querySelector("#uploadform input")
    .addEventListener("change", function () {
      document.querySelector("#uploadform").submit();
    });
</script>
<% include ./partials/footer.ejs %>
