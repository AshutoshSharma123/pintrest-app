<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-gray-600 px-10 py-5 text-white">
    <h1 class="text-xl ">  Create new post</h1>
    <hr class="opacity-10">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 " type="file" name="postimage">
        <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2 text-black" type="text" placeholder="Title" name="title">
        <textarea  class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2 text-black " type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2  rounded-md mt-2 bg-red-700" type="submit" value="Create new post">
    </form>
</div>
